<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.messagepademu.einstein"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<supports-screens android:anyDensity="true" 
                      android:resizeable="true" 
                      android:smallScreens="true" 
                      android:largeScreens="true" 
                      android:normalScreens="true">
    </supports-screens>
    <application 
        android:name=".EinsteinApplication"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher_newtonemulator"
        android:alwaysRetainTaskState="true"
        android:allowBackup="true">
        <activity android:name=".EinsteinActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait"
                  android:configChanges="keyboardHidden|orientation" 
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:launchMode="singleTop">
           	<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".actions.ActionsActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Dialog"
                  android:launchMode="singleInstance">
        </activity>
        <activity android:name=".prefs.EinsteinPreferencesActivity">            
        </activity>
        <activity android:name=".actions.LoadPackageActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Dialog"
                  android:launchMode="singleInstance">
        	<intent-filter>
    			<action android:name="android.intent.action.VIEW" />
    			<category android:name="android.intent.category.DEFAULT" />
    			<category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\.pkg" />
                <data android:scheme="http" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\.pkg" />
              	<data android:scheme="http" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\.pkg" />
                <data android:scheme="http" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\..*\\.pkg" />
                <data android:scheme="http" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\.PKG" />
              	<data android:scheme="http" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\.PKG" />
                <data android:scheme="http" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\..*\\.PKG" />
                <data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\.pkg" />
                <data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\.pkg" />
				<data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\.pkg" />
                <data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\..*\\.pkg" />
                <data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\.PKG" />
                <data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\.PKG" />
				<data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\.PKG" />
                <data android:scheme="https" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\..*\\..*\\..*\\.PKG" />
                <data android:scheme="content"
                      android:mimeType="*/*" 
                      android:host="*"
                      android:pathPattern=".*\\.pkg" />
                <data android:scheme="file" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\.pkg" />
                <data android:scheme="file" android:mimeType="*/*" android:host="*" android:pathPattern=".*\\.PKG" />
            </intent-filter>
    		<!-- allow 717006 with the extension .rom, .aif, and .zip, also allow .rex? -->
       	</activity>
        <service
      		android:name=".EinsteinService"
      		android:process=":remote">
      		<intent-filter>
        		<action android:name="org.messagepademu.einstein.EinsteinService" />
      		</intent-filter>
    	</service>
    </application>
</manifest> 
