# omit CheckIn {Active}, CheckOut {Active}, Cancel {Active} from C++ Tools menus# comment out the following line if you want these menu item added to the Project MenuExit 0 if "`Exists "{NCTTools}DefineDDKVariables"`" == ""If "{NCTCheckIOCMenuName}" == ""	Set NCTCheckIOCMenuName "Project"endIf "{myOwnProjectsMenu}" == ""	AddMenu "{NCTCheckIOCMenuName}" (- ''	AddMenu "{NCTCheckIOCMenuName}" 'Checkin {Active}'"{{CheckInActiveCmdKey}}" '		If "{{Active}}" == "{{Worksheet}}" ; 			CheckIn -w ; 		Else ; 			NCTCheckWindowIn "{{Active}}" ; 		End'	AddMenu "{NCTCheckIOCMenuName}" 'Checkout {Active}'"{{CheckOutActiveCmdKey}}" '		If "{Active}" == "{Worksheet}" ;			CheckOut -w ;		Else ;			NCTCheckWindowOut "{Active}" ;		End'	AddMenu "{NCTCheckIOCMenuName}" 'Cancel {Active}'"{{CancelCheckoutCmdKey}}" '		If "{{Active}}" == "{{Worksheet}}" ; 			Checkout -w ; 		Else ; 			Set wasActive "{{Active}}" ; 			NCTCancelWindowCheckOut "{Active}" && 			If "{{AutoCloseAfterCancel}}" ; 				Close -c "{{wasActive}}" ; 			End ; 		End'End