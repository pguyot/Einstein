# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 4
trim_trailing_whitespace = true

[*.{c,cpp,h,m,mm,t,f}]
indent_style = tab

[*.{txt,md}]
indent_style = space

[*.{yml}]
indent_style = space
indent_size = 2
